<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/javascripts/new-workouts.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>New Workout</title>
  </head>
  <body>

    <nav class="grey lighten-1 z-depth-4">
      <div>
        <a href="/dashboard" class="brand-logo center">Ascetic</a>
        <ul id="nav-mobile" class="left">
          <li><a href="/exercises">Exercises</a></li>
          <li><a href="/workouts">Workouts</a></li>
        </ul>
        <ul id="nav-mobile" class="right">
          <li><a href="/dashboard">Dashboard</a></li>
          <li>
            <a href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row">
          <form class="col s12" action="/workouts" method="POST">
            <div class="row valign-wrapper">
              <div class="input-field col s6">
                <input name="name" id="workout_name" type="text" class="validate">
                <label for="workout_name">Workout Name</label>
              </div>
              <div class="col s6">
                <button class="btn waves-effect waves-light col s12" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>
              <% categories.forEach((category) => { %>
                <ul class="col s12 collection with-header">
                    <li class="collection-header categoryHeader">
                      <%= category.name %>
                    </li>
                    <% category.exercises.forEach((exercise) => { %>
                      <div class="exerciseShow">
                        <li class="collection-item">
                          <label>
                            <input type="checkbox" class="filled-in" name='exercise_names' id="myCheckbox" value="<%= exercise %>"/>
                            <span>Add <%= exercise %></span>
                          </label>
                        </li>
                      </div>
                    <% }) %>
                  </ul>
              <% }) %>
            </div>
          </form>
        </div>
    </div>

    <script type="text/javascript" src="/javascripts/materialize.min.js"></script>
  </body>
</html>
